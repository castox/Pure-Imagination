			#visible = "[Not(SiegeWindow.GetSiege.IsBlocked)]"
			size = { 100% 100% }
		}
        block "bar_color"
        {
			#texture = "gfx/interface/hud/mp.dds"
        }
	}    
    Type progressbar_hp = icon
    {
        shaderfile = "gfx/FX/repeat_texture.shader"
        alpha = 0.8

        block "bar_color"
