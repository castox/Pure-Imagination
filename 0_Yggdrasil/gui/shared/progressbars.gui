            spriteborder = { 2 2 }
            size = { 100% 100% }
        }
	}
	
    Type progressbar_mp = icon
    {
        shaderfile = "gfx/FX/repeat_texture.shader"
        alpha = 0.8
		animation_progessbar_center_glowx = {
			#visible = "[Not(SiegeWindow.GetSiege.IsBlocked)]"
            flipdirection = yes
			size = { 100% 100% }
		}
        block "bar_color"
        {
			texture = "gfx/interface/tavern/p_progress.dds"
        }
    }
    Type progressbar_ball = icon
    {
        shaderfile = "gfx/FX/repeat_texture.shader"
        alpha = 0.8
